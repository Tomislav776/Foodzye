<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">


    <AutoCompleteTextView
        android:id="@+id/food_fragment_search"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/input"
        android:hint="Search..."
        android:textColor="#c0392b"
        android:gravity="center"
        android:completionThreshold="1"
        android:padding="10dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/food_fragment_sort"
        android:textColor="#c0392b"

        android:background="@android:drawable/edit_text"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@+id/food_fragment_search"
        android:layout_toEndOf="@+id/food_fragment_search"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/food_fragment_search"/>

</RelativeLayout>