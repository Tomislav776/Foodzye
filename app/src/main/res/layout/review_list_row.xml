<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/review_image_user"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/desc_list_item_icon"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/review_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/list_item_title"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="40dp"
        android:layout_alignBottom="@+id/review_review_text"
        android:layout_toRightOf="@+id/review_image_user"
        android:layout_toEndOf="@+id/review_image_user"
        android:layout_marginBottom="13dp" />



    <ImageView
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:src="@drawable/round"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/review_image_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView android:id="@+id/review_review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20kn"
        android:textColor="@color/counter_text_color"
        android:padding="5dp"
        android:layout_alignBottom="@+id/review_image_user"
        android:layout_alignLeft="@+id/review_name_user"
        android:layout_alignStart="@+id/review_name_user" />

    <RatingBar
        android:layout_width="wrap_content"
        android:theme="@style/RatingBar"
        android:layout_height="wrap_content"
        android:id="@+id/review_food_rate"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_alignTop="@+id/review_image_user"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>