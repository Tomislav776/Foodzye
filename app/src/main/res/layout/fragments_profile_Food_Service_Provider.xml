<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomipc.foodzye.ProfileActivity">

    <android.support.v7.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FoodServiceProviderRatingBar"
        android:theme="@style/RatingBar"
        style="@style/Base.Widget.AppCompat.RatingBar.Indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description Text"
        android:textColor="@color/primary_dark"
        android:id="@+id/DescriptionTextView"
        android:layout_below="@id/FoodServiceProviderRatingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Text"
        android:textColor="@color/primary_dark"
        android:id="@+id/PhoneTextView"
        android:layout_below="@id/DescriptionTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Work hours Text"
        android:textColor="@color/primary_dark"
        android:id="@+id/WorkHoursTextView"
        android:layout_below="@id/DescriptionTextView"
        android:layout_toRightOf="@id/PhoneTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your review"
        android:textColor="@color/primary_dark"
        android:id="@+id/ReviewTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/PhoneTextView" />

    <android.support.v7.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FoodServiceProviderUserReviewRatingBar"
        android:layout_centerHorizontal="true"
        android:theme="@style/RatingBar"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:isIndicator="false"
        android:layout_below="@id/ReviewTextView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your review"
        android:textColor="@color/primary_dark"
        android:id="@+id/ReviewEditTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/FoodServiceProviderUserReviewRatingBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send review"
        android:id="@+id/SendPlaceReviewButton"
        android:layout_below="@+id/ReviewEditTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/SendPlaceReviewButton"
        android:text="REVIEWS"
        android:textStyle="bold"
        android:id="@+id/ReviewTextView2"
        android:textColor="#c0392b"
        android:fontFamily="sans-serif-medium"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_profile_review_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/ReviewTextView2" />

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>