<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/place_fragment_linear_above">

        <com.example.tomipc.foodzye.InstantAutoComplete
            android:id="@+id/place_fragment_search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".70"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input"
            android:hint="Search..."
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:gravity="center"
            android:textSize="17dp"
            android:completionThreshold="1"
            android:padding="10dp" />


        <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".30"
            android:theme="@style/HiddenTitleTheme"
            android:popupBackground="@color/white"
            android:background="@drawable/input"
            android:id="@+id/place_fragment_sort"
            android:padding="10dp"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:layout_toRightOf="@+id/place_fragment_search" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/place_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/place_fragment_linear_above"/>

</RelativeLayout>