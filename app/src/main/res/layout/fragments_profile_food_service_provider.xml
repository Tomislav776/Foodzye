<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProfileRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.example.tomipc.foodzye.ProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description Text"
        android:maxWidth="300dp"
        android:textColor="@color/black"
        android:id="@+id/DescriptionTextView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:textColor="@color/red"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/DescriptionTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone text"
        android:textColor="@color/black"
        android:id="@+id/PhoneTextView"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:textColor="@color/red"
        android:layout_below="@id/PhoneTextView"
        android:layout_alignRight="@id/PhoneTextView"
        android:layout_alignEnd="@id/PhoneTextView"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email text"
        android:id="@+id/EmailTextView"
        android:textColor="@color/black"
        android:layout_below="@id/textView6"
        android:layout_alignLeft="@id/textView6"
        android:layout_alignStart="@id/textView6"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Work hours:"
        android:textSize="15dp"
        android:id="@+id/textView8"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/red"
        android:layout_below="@id/EmailTextView"
        android:layout_alignLeft="@id/EmailTextView"
        android:layout_alignStart="@id/EmailTextView"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Work hour text"
        android:textColor="@color/black"
        android:id="@+id/WorkHoursTextView"
        android:layout_below="@id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD YOUR OWN REVIEW"
        android:id="@+id/ReviewTextView"
        android:textColor="#c0392b"
        android:fontFamily="sans-serif-medium"
        android:textSize="18dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FoodServiceProviderUserReviewRatingBar"
        android:layout_centerHorizontal="true"
        android:theme="@style/RatingBar"
        style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
        android:isIndicator="false"
        android:layout_below="@id/ReviewTextView"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Your review"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:id="@+id/ReviewEditTextView"
        android:layout_below="@id/FoodServiceProviderUserReviewRatingBar"
        android:background="@drawable/input"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Send review"
        android:id="@+id/SendPlaceReviewButton"
        android:layout_below="@id/ReviewEditTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:padding="10dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="LOG IN TO RATE"
        android:id="@+id/profile_review_login_button"
        android:layout_below="@id/ReviewEditTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVIEWS"
        android:textStyle="bold"
        android:id="@+id/ReviewTextView2"
        android:textColor="@color/red"
        android:fontFamily="sans-serif-medium"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/SendPlaceReviewButton"
        android:layout_centerHorizontal="true" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_profile_review_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/ReviewTextView2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/AdressTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shadow"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textColor="@color/red"
        android:fontFamily="sans-serif-medium"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Address"
        android:gravity="center"
        android:id="@+id/AdressTextView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView11"
        android:background="@drawable/shadow_up"
        android:layout_below="@+id/WorkHoursTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
</android.support.v4.widget.NestedScrollView>